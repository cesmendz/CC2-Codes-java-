import java.util.ArrayList;
import java.util.List;

class Employee {
    // Attributes
    public String employeeID;
    public String name;
    public double hourlyWage;
    public double hoursWorked;
    

    // Constructor
    public Employee(String employeeID, String name, double hourlyWage, double hoursWorked) {
        this.employeeID = employeeID;
        this.name = name;
        this.hourlyWage = hourlyWage;
        this.hoursWorked = hoursWorked;
    }

    // Method to calculate monthly salary
    public double calculateSalary() {
        return hourlyWage * hoursWorked;
    }

    // Method to display employee details
    public void displayEmployeeDetails() {
        double salary = calculateSalary();
        System.out.printf("ID: %s, Name: %s, Wage: %.2f, Hours Worked: %.2f, Salary: %.2f%n",
                employeeID, name, hourlyWage, hoursWorked, salary);
    }
}

public class Payroll {
    public static void main(String[] args) {
        // Create a list of employees
        List<Employee> employees = new ArrayList<>();

        // Adding Employee 1
        employees.add(new Employee("E001", "Alice Go", 15.0, 160));
        
        // Adding Employee 2
        employees.add(new Employee("E002", "Bob Hann", 18.0, 150));

        // Calculating salaries and displaying employee details
         System.out.println("Employee 1:");
         System.out.println("\tID: E001");
         System.out.println("\tName: Alice Go");
         System.out.println("\tHourly Wage: 15");
         System.out.println("\tHours Worked: 160");
         
         System.out.println("Employee 2:");
         System.out.println("\tID: E002");
         System.out.println("\tName: Bob Hann");
         System.out.println("\tHourly Wage: 18");
         System.out.println("\tHours Worked: 150\n\n");
         
        System.out.println("Calculating salaries...\n");
        System.out.println("Employee Deatils: ");

        for (Employee employee : employees) {
            employee.displayEmployeeDetails();
        }
    }
}
